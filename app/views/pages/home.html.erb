<div class="navbar navbar-expand-md fixed-top navbar-dark">
  <%= link_to root_path, class: "navbar-brand" do %>
    <i class="far fa-hand-paper"></i>  ManyHands
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <div class="navbar-nav ml-auto">
        <form method="post" class="search-form">
          <span class="icon ion ion-search"></span>
          <input type="text" class="form-control" placeholder="Search...">
        </form>
     </div>
     <% if user_signed_in? %>
      <li>
        <%= link_to "Log Out", destroy_user_session_path, class: "nav-link", method: :delete %>
      </li>
      <% else %>
      <li>
        <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
      </li>

      <% end %>

      <li class="nav-item dropdown ml-4">
        <%= image_tag "http://indiedeveloper.com/wp-content/themes/sweetdate-child/avatar-blank.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
        </div>
      </li>


    </ul>
  </div>
</div>


<section class="site-hero overlay mb-4" style="background-image: url(https://i.postimg.cc/sX6Lkyp0/photo-1531206715517-5c0ba140b2b8.jpg)">
      <div class="container">
        <div class="row site-hero-inner justify-content-center align-items-center">
          <div class="col-md-12">
            <h1 class="heading mb-4" data-aos="fade-up">Many Hands</h1>
            <p class="sub-heading mb-5" data-aos="fade-up" data-aos-delay="100">
            Make your events uniques hiring creatives from your local community
            </p>
            <p class="pt-4" data-aos="fade-up" data-aos-delay="100">
              <%= link_to 'Get Started', new_event_path, class: "btn uppercase btn-outline-light d-sm-inline d-block py-3" %>
            </p>
          </div>
        </div>
      </div>
    </section>
