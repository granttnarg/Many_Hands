<%= render 'shared/navbar' %>
<h1>Creatives in your area</h1>

<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="card">
         <%= cl_image_tag user.coverphoto, height: 50, crop: :fill %>
        <p class="card-text">
        <%= cl_image_tag user.profile_photo, height: 100, crop: :fill %>
        <p class="card-text">
        <%= link_to user.first_name, user_path(user) %>
        <%= user.email %>
        </p>
      </div>
    <% end %>
  </div>
</div>

