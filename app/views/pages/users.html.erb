<%= render 'shared/navbar' %>


<div class="container">
  <div class="heading-title" ><h3 >Creatives in your area</h3></div>
  <div class="row">
    <% @users.each do |user| %>
    <div class="col-6" style="margin-bottom: 25px;">
      <div class="card">
         <%= cl_image_tag user.coverphoto, height: 50, crop: :fill %>
        <p class="card-text">
        <%= cl_image_tag user.profile_photo, height: 100, crop: :fill %>
        <p class="card-text">
        <%= link_to user.first_name, user_path(user) %>
        <%= user.email %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
</div>

