  <div class="box">

    <div class="first-row-box">
      <div class="upper-left-box">
        <div class ="cover-avatar">
          <%= cl_image_tag @user.profile_photo, crop: :fill, class: "circle-avatar" %>
        <div class="cover-photo">
          <%= cl_image_tag @user.coverphoto, height: 150, width: 500, crop: :fill, class: "cover-photo" %>
        </div>
      </div>
        <div class="your-self">
          <div class="profile-text">
            <p class ="profile-text">Name: <%= @user.first_name %> <%= @user.last_name  %></p>
            <p class ="profile-text">Location: <%= @user.location %></p>
            <p class ="profile-text">Looking for: <%= @user.looking_for %></p>
            <p class ="profile-text">Contact: <%= @user.email  %></p>
          </div>
          <div class="social-media">
            <i class="fab fa-facebook-f"></i>
            <i class="fab fa-instagram"></i>
            <i class="fab fa-youtube"></i>
         </div>
        </div>
      </div>

      <div class="upper-right-box">
      <div class="create-new-event">
      <%= link_to "Create Event", new_event_path, class: "create-event" %>
      </div>

      </div>
    </div>

  <div class="row">
     <% @events.each do |event|  %>
       <div id = "each-event" class="col-4">
          <!-- <div class="event-info"> -->
            <%= link_to event_path(event) do %>
              <!-- <div class="event-photo"> -->
                <div id="dash-card" style="height: 100%; background-image: linear-gradient(45deg, rgba(0,0,0,0.2), rgba(0,0,0,0.6)), url('<%= image_path event.photo %>');" >
                  <div class="spot-status">
                    3 spots /
                    2 filled<!--
                  hard-coded please change with ruby code! -->
                  </div>

                </div>
              <!-- </div> -->
             <% end %>
          <!-- </div> -->
                  <div class="event-description">
                    <h5 class ="event-text"> <%= event.name %></h5>
                    <h5 class ="event-text"> <%= event.venue_name  %></h5>
                    <h5 class ="event-text"> <%= event.address  %></h5>
                    <h5 class ="event-text"> <%#= event.start_date.strftime("%b %d, %Y") %></h5>
                    <h5 class ="event-text"><%#= event.end_date.strftime("%b %d, %Y") %></h5>
                  </div>
        </div>
        <% event.spots.each do |spot| %>
        <div id="request-box" class ="col-8">
            <h4 class ="title-inbox">Inbox</h4>


          <% notifications = spot.requests.where(status: :pending) %> <%# Need to change to "pending" %>
          <%# if notifications.empty? %>
         <!--   <h4>Your Job Spot Request isempty</h4> -->

          <% notifications.each_with_index do |notification, index| %>
          <div class="request-content">
          <p class ="request-text"> <%= index + 1 %> <br>
            <span class="image-circle"></span>
              <%= cl_image_tag spot.requests.first.user.profile_photo,crop: :fill, class: "avatar-message" %>
              <div class="from-info">
                <%= link_to "#{spot.requests.first.user.first_name}", spot_creative_path(spot, spot.requests.first.user)%> <br>  <%= notification.status %>
              </div>

              <h6 class = "category"><%= spot.category %>
                <%= spot.role %>
              </h6>
              <div class="contents">
                <p class ="request-text"> <%= notification.note %></p>
              </div>
            <div class="confirm">
                  <%= simple_form_for [@spot, notification], url: spot_request_path(spot, notification), html: { class: "status-form" } do |f| %>
                   <div class="request-status-box">
                    <a href="#" class="button" data-value="confirmed"><i class="fas fa-check"></i></a>
                    <a href="#" class="button" data-value="rejected"><i class="fas fa-times"></i></a>
                    <%= f.input :status, as: :hidden, input_html: { class: 'status-input' } %>
                    <%= f.submit :submit, class: "submit d-none" %>
                  </div>
                <% end %>
            </div>
            </div>
        <% end %>
          </div>
      <% end %>
    <% end %>
    </div>
  </div>
