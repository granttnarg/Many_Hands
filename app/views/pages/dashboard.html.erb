  <% @events.each do |event|  %>

  <div class="row">
    <div id = "each-event" class="col-4">
      <%= link_to event_path(event) do %>
        <div id="dash-card" style="height: 65%; background-image: linear-gradient(45deg, rgba(0,0,0,0.2), rgba(0,0,0,0.6)), url('<%= image_path event.photo %>');" >
            <div class="spot-status">
              <% filled_spots = 0 %>
              <% event.spots.each do |spot| %>
                <% spot.requests.where(status: :confirmed) ? filled_spots += 1 : filled_spots %>
               <% end %>
              <%= filled_spots %> / <%= event.spots.count %> spots filled
            </div>
        </div>
      <% end %>

        <div class="event-description">
            <h5 class ="event-text"> <b>Event Name </b><%= event.name %></h5>
            <h5 class ="event-text"><b>Venue </b><%= event.venue_name  %></h5>
            <% if !event.start_date.nil? && !event.end_date.nil?  %>
            <h5 class ="event-text"><b>Start Date </b><%= event.start_date.strftime("%b %d, %Y") %></h5>
            <h5 class ="event-text"><b>End Date </b><%= event.end_date.strftime("%b %d, %Y") %></h5>
            <% end %>
        </div>
    </div>
    <% if !event.spots.present? %>
      <div id="request-box" class ="col-8">
        You have not created spots.
        Please create spots.
      </div>
    <% else %>
        <div id="request-box" class ="col-8">
          <% event.spots.each do |spot| %>
            <div class ="inbox">
                <h4 class ="title-inbox">Inbox</h4>
                <div class="spot-title">
                  <%= spot.category %>
                </div>

                <div class="request-content">
                    <% notifications = spot.requests.where(status: :pending) %>
                    <% notifications.each_with_index do |notification, index| %>
                    <p class ="request-text"> <%= index + 1 %> <br>
                      <span class="image-circle"></span>
                          <%= cl_image_tag notification.user.profile_photo,crop: :fill, class: "avatar-message" %>
                          <div class="from-info">
                            <%= link_to "#{notification.user.first_name}", spot_creative_path(spot, notification.user)%>
                          </div>
                          <p class = "category"><%= spot.category %>
                            <%= spot.role %>
                          </p>
                          <div class="contents">
                            <p class ="request-text-note"> <%= notification.note %></p>
                          </div>
                          <div class="confirm">
                            <%= simple_form_for [@spot, notification], url: spot_request_path(spot, notification), html: { class: "status-form" } do |f| %>
                                <div class="request-status-box">
                                  <a href="#" class="button" data-value="confirmed"><i class="fas fa-check"></i></a>
                                  <a href="#" class="button" data-value="rejected"><i class="fas fa-times"></i></a>
                                  <%= f.input :status, as: :hidden, input_html: { class: 'status-input' } %>
                                  <%= f.submit :submit, class: "submit d-none" %>
                                </div>
                              <% end %>
                          </div>
                        <% end %>
                    </div>
            </div>

            <div class ="invi-request">
              <h4 class ="title-inbox">Invitation</h4>
                <div class="invitations">
              <% spot.invitations.each do |invitation| %>
                  <%# if invitation.blank? %>

                  <%# else %>
                    <div class="alert-invitation">
                      <div class="flash-inv" >
                        <span><strong>Yay!</strong> ðŸŽ‰ you successfully made an invitation to <b>
                          <%= link_to "#{invitation.user.first_name}", user_path(invitation.user) %> </b>
                          for the <%= invitation.spot.category %>
                        <%= cl_image_tag invitation.user.profile_photo,crop: :fill, class: "avatar-invi-message" %>
                        </span>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
