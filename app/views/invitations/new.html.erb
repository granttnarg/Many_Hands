


<div class="overlay">

<div class="container" style="margin-top: 130px; padding-bottom: 50px;background-color:white; width: 800px;border: solid 8px #ff3f00;
     padding-left: 30px; padding-right: 30px;">
  <h1 class="text-left" style="margin-bottom: 45px;padding-top: 70px; color: black">Your Invitation to <%= @creative.first_name.capitalize  %></h1>

 <div class="each-spot-position">
    <div class="spot-btn-hovering">
      <div class="each-spot-full text-left" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @creative.profile_photo %>')">
      </div>

    </div>
  </div>

<%= simple_form_for [@spot, @invitation] do |f| %>



   <%= f.input :message %>
  <%= f.input :creative_id, as: :hidden, input_html: { value: params[:creative_id] } %>

  <%= f.submit "invite", class: "btn boton", name: "submit-type"%>




<% end %>
</div>
</div>
