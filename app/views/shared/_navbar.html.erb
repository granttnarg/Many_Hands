<% light = false unless local_assigns.has_key? :light %>
<div class="navbar navbar-expand-md fixed-top navbar-dark" style="background-color: transparent" >
  <%= link_to root_path, class: "navbar-brand-pages", style: "margin-bottom: -30px;" do %>
   <p class ="<%= light ? "logo-text-landing" : "logo-text" %>"> mh</p>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <div class="navbar-nav ml-auto">
        <form method="post" class="search-form">
          <span class="icon ion ion-search"></span>

        </form>
     </div>


      <li class="nav-item dropdown ml-4" >
        <% if user_signed_in? %>
        <%= cl_image_tag current_user.profile_photo, height: 45, crop: :fill, class: "avatar", 'data-toggle': "dropdown", 'aria-haspopup': "true", 'aria-expanded': "false" %>
        <%else  %>
        <%= image_tag "http://indiedeveloper.com/wp-content/themes/sweetdate-child/avatar-blank.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
             <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
             <%= link_to "Log Out", destroy_user_session_path, class: "dropdown-item", method: :delete %>
           <% else %>
             <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>

           <% end %>
        </div>

      </li>


    </ul>
  </div>
</div>

