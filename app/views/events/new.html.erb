<%= render 'shared/navbar' %>
<div class="container" style="padding-top: 30px">
  <h1 class="text-center" style="padding-top: 100px; color: #3f4458">Create your event</h1>
  <%= simple_form_for @event do |f| %>
  <div class="row" style="padding-top: 50px;">
      <div class="col-xs-12 col-lg-8">
        <%= f.input :name %>
        <%= f.input :venue_name %>
        <%= f.input :address %>
        <%= f.input :about %>
      </div>
      <div class="col-xs-12 col-lg-4">
        <%= f.input :start_date, as: :string,  input_html: { class: "datepicker"} %>
        <%= f.input :start_time, as: :string,  input_html: { class: "timepicker"} %>
        <%= f.input :end_date, as: :string, input_html: { class: "datepicker"} %>
        <%= f.input :end_time, as: :string,  input_html: { class: "timepicker"} %>
      </div>
      </div>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Create event", class: "btn btn-primary", style: "color: white; background: #3f4458; border-color: #3f4458; background-color: #3f4458" %>
  <% end %>
</div>




