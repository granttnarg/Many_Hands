<div class="container">
  <div class="row">
    <% @events.each do |event| %>
      <div class="card">
        <%= cl_image_tag event.photo, height: 300, crop: :fill %>
        <p class="card-text">
        <%= link_to event.name, event_path(event) %>
        </p>
        <p class="card-text">
        <%= event.venue_name%>
        </p>
        <p class="card-text">
        <%= event.address%>
        </p>
        <p class="card-text">
        <%= event.start_date%>
        </p>
        <p class="card-text">
        <%= event.end_date%>
        </p>
        <p class="card-text">
        <%= event.about%>
        </p>
      </div>
    <% end %>
  </div>
  <%= link_to "Create new event", new_event_path, class: "btn btn-primary" %>
</div>
