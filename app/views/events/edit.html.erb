<div class="overlay">

  <%= render 'shared/navbar' %>
  <div class="container" style="margin-top: 130px; padding-bottom: 50px;background-color:white; width: 800px;border: solid 8px #ff3f00;
   padding-left: 30px; padding-right: 30px;">
    <h1 class="text-center" style="padding-top: 70px; color: black", label_html: { class: "nombre"}>Edit your event</h1>
  <%= simple_form_for @event do |f| %>
    <div class="row" style="padding-top: 50px;">
      <div class="col-xs-12 col-lg-8">
      <%= f.input :name, label_html: { class: "nombre"} %>
      <%= f.input :venue_name, label_html: { class: "nombre"} %>
      <%= f.input :address, label_html: { class: "nombre"} %>
      <%= f.input :about, label_html: { class: "nombre"} %>
      </div>
      <div class="col-xs-12 col-lg-4">
      <%= f.input :start_date, label_html: { class: "nombre"}, as: :string,  input_html: { class: "datepicker"} %>
      <%= f.input :start_time, label_html: { class: "nombre"}, as: :string,  input_html: { class: "timepicker"} %>
      <%= f.input :end_date, label_html: { class: "nombre"}, as: :string,  input_html: { class: "datepicker"} %>
      <%= f.input :end_time, label_html: { class: "nombre"}, as: :string,  input_html: { class: "timepicker"} %>
  
      </div>
      </div>
      <div style="padding-left: 13px;">
      <%= f.input :photo, label_html: { class: "nombre"} %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Update event", class: "btn boton" %>
      </div>
    <% end %>


</div>
</div>