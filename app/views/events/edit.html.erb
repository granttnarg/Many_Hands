  <%= render 'shared/navbar' %>
  <div class="container" style="padding-top: 30px">
  <%= simple_form_for @event do |f| %>
    <div class="row">
      <div class="col-xs-12 col-lg-8">
      <%= f.input :name %>
      <%= f.input :venue_name %>
      <%= f.input :address %>
      <%= f.input :about %>
      </div>
      <div class="col-xs-12 col-lg-4">
      <%= f.input :start_date, as: :string,  input_html: { class: "datepicker"} %>
      <%= f.input :end_date, as: :string,  input_html: { class: "datepicker"} %>
  
      </div>
      </div>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Update event", class: "btn btn-secondary", style: "color: white; background: #3f4458; border-color: #3f4458; background-color: #3f4458" %>
    <% end %>


</div>
