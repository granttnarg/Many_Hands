<h1>Creatives in your area</h1>

<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="card">
         <%= cl_image_tag user.coverphoto, height: 150, width: 200, crop: :fill %>

        <p class="card-text">
        <%= cl_image_tag user.profile_photo, height: 100, width:100, radius: 50, crop: :fill %>
        </p>
        <p class="card-text">
        <%= link_to user.first_name, spot_creative_path(@spot, user) %>
        </p>
        <p class="card-text">
        <%= user.category %>
        <p class="card-text">
        <%= user.skill %>
        </p>
      </div>
    <% end %>
  </div>
</div>

